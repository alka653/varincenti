		color white

.profile-card
	padding-top 25px
	box-shadow(0 2px 5px 0 rgba(0, 0, 0, 0.16), 0 2px 10px 0 rgba(0, 0, 0, 0.12))
	margin 2rem 0
	background-color white
	img
		width 140px
		height 140px
		display block
		margin 0 auto
		text-align center
		border-radius(50%)
		box-shadow(2px 2px 5px #888888)
	.profile-info
		padding 1rem 
		h4
			margin-top 0
			text-align center
			text-transform uppercase
		p
			text-align center
		.inline-list
			text-align center
			margin-bottom 1rem
			li
				float none
				display inline-block

.orbit-bullets
	li
		background cloud

.box
	padding 10px 20px 3px 20px
	color cloud
	text-align center

.container-init
	margin-top 100px

.card-login
	background-color white
	padding 15px
	box-shadow(0px 2px 4px rgba(0,0,0,0.12))

.login-footer
	p
		padding-top 5px
		color silver

.img-square
	border-radius(10px)

.img-circle
	border-radius(200px)

.endless_page_link
	background-color cloud
	color black
	padding 10px
	&:hover
		color white
		background-color silver

table
	border none
	margin 0 auto

@media only screen and (min-width 40.063em)

	.fixed-high
		position fixed
		top 0
		width 100%
		z-index 99
		left 0

	.box
		text-align center
		padding 10px 20px 3px 20px

	.head-title
		padding 60px 0px 0px 0px

	.contain-to-grid
		.hybrid-bar
			max-width 62.5rem
			margin 0 auto
			margin-bottom 0

	.hybrid-bar
		overflow hidden
		.tab-bar
			display inline-block
		.right-off-canvas-menu
			display inline
			width auto
			height auto !important
			top auto
			bottom auto
			position relative
		ul.off-canvas-list
			float right
			list-style-type none
			padding 0
			margin 0
			li
				float left
				label
					padding 0.3rem 0.9375rem
					color silver
					text-transform uppercase
					font-weight bold
					background cloud
					border-top 1px solid silver
					border-bottom none
					margin 0
				a
					font-size 16px
					display block
					color cloud
					padding 12px 12px 12px 12px
					font-size 0.8125rem
					text-transform none
					background transparent
					&:hover
						background rgba(0,0,0,0.2)

	.rounded-hover
		&:hover
			border-radius(5px 5px 5px 5px)

	.max-slider
		.orbit-bullets-container
			margin-top -55px